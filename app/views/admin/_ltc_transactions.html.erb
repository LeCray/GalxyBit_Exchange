<table class="table" ">
	<thead>
		<tr>
			<th><b>TYPE</b></th>
			<th><b>LTC AMOUNT</b></th>
			<th><b>ZAR AMOUNT</b></th>
			<th><b>STATUS</b></th>
			<th><b>ID</b></th>
			<th><b>CREATED AT</b></th>
		</tr>
	</thead>
	<tbody>
		<% @ltc_transactions.each do |t| %>
			<tr>
				<td><%= t.transaction_type %></td>
				<td> 
			        <% if t.transaction_type == 'BUY' %>
						<%= t.ltcBuyAmount %>
					<% else %>
						<%= t.ltcSellAmount %>
					<% end %>
				</td>
				<td>
					<% if t.transaction_type == 'BUY' %>
						<%= number_to_currency(t.zarSpendAmount, unit: "R ")%>
					<% else %>
						<%= number_to_currency(t.zarRecieveAmount, unit: "R ")%>
					<% end %>
				</td>
				<td><%= t.status %></td>
				<td><%= t.id %></td>
				<td><%= t.created_at.strftime("%Y-%m-%d / %X") %></td>
			</tr>
		<% end %>
		<tr>
			<th><b>Balance:</b></th>
			<th><b><%= @account.ltc_balance %> LTC</b></th>
			<th></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</tbody>
</table>
<div style="text-align: center: bottom: 20px">
  <%= will_paginate @ltc_transactions, renderer: BootstrapPagination::Rails %>
</div>
