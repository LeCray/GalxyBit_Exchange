%table.table
	%thead
		%tr
			%th <b>DATE OF TRANSACTION</b>
			%th <b>TYPE</b>
			%th <b>AMOUNT</b>
			%th <b>STATUS</b>
	%tbody
		- @zar_transactions.each do |t|
			%tr
				%td #{t.created_at}
				%td #{t.transaction_type}
				%td #{number_to_currency(t.amount, unit: "R ")}

				%td #{t.status}
		%tr
			%th
			%th <b>Balance</b>
			%th <b>#{number_to_currency(@account.zar_balance, unit: "R ")}</b>
			%th

%div{:style => "text-align: center"}
	= will_paginate @zar_transactions, renderer: BootstrapPagination::Rails