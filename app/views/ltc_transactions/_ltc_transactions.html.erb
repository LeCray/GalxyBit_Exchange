<table class="table">
  <thead>
    <tr>
      <th><b>TYPE</b></th>
      <th><b>LTC</b></th>
      <th><b>PRICE</b></th>
      <th><b>ZAR</B></th>
      <th><b>STATUS</b></th>
      <th><b>ID</b></th>
      <th><b>CREATED AT</b></th>
    </tr>
  </thead>
  <tbody>
    <% @ltc_transactions.each do |t| %>
      <tr>
      <% if t.transaction_type == "BUY" %>
          <td style="color: green"><%= t.transaction_type %></td>
      <% else %>
        <td style="color: red"><%= t.transaction_type %></td>
      <% end %>

    <% if t.transaction_type == 'BUY' %>
      <td style="color: green"> + <%= t.ltcBuyAmount %></td>
    <% else %>
      <td style="color: red"> - <%= t.ltcSellAmount %></td>
    <% end %>

        <td><%= t.value %></td>

        
    <% if t.transaction_type == 'BUY' %>
      <td style="color: red"> - <%= number_to_currency(t.zarSpendAmount, unit: "R ")%></td>
    <% else %>
      <td style="color: green"> + <%= number_to_currency(t.zarRecieveAmount, unit: "R ")%></td>
    <% end %>
    
      <% if t.status =="Approved" %>
          <td style="color: green"><%= t.status %></td>
        <% else %>
          <td><%= t.status %></td>
        <% end %>

        <td><%= t.id%></td>
        
        <td><%= t.created_at.strftime("%Y-%m-%d / %X") %></td>
      </tr>
    <% end %>
    <tr>
      <th><b>Balance:</b></th>
      <th><b><%= @account.ltc_balance %> LTC</b></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tbody>
</table>
<div style="text-align: center">
  <%= will_paginate @ltc_transactions, renderer: BootstrapPagination::Rails %>
</div>
