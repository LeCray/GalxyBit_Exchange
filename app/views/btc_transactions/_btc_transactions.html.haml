%table.table
	%thead
		%tr
			%th <b>DATE OF TRANSACTION</b>
			%th <b>TYPE</b>
			%th <b>BUY AMOUNT</b>
			%th <b>SELL AMOUNT </b>
			%th <b>STATUS</b>
	%tbody
		- @btc_transactions.each do |t|
			%tr
				%td #{t.created_at}
				%td #{t.transaction_type}
				%td #{t.btcBuyAmount}
				%td #{t.btcSellAmount}

				%td #{t.status}
		%tr
			%th <b>Balance: #{@account.btc_balance}</b>
			%th 
			%th 
			%th
			%th

%div{:style => "text-align: center"}
	= will_paginate @zar_transactions, renderer: BootstrapPagination::Rails