<table class="table">
  <thead>
    <tr>
      <th><b>TYPE</b></th>
      <th><b>ETH AMOUNT</b></th>
      <th><b>PRICE</b></th>
      <th><b>ZAR AMOUNT</B></th>
      <th><b>STATUS</b></th>
      <th><b>CREATED AT</b></th>
    </tr>
  </thead>
  <tbody>
    <% @eth_transactions.each do |t| %>
      <tr>
        <td><%= t.transaction_type %></td>
        <td>

          <% if t.transaction_type == 'BUY' %>
            <%= t.ethBuyAmount %>
          <% else %>
            <%= t.ethSellAmount %>
          <% end %>

        </td>
        <td><%= t.value %></td>
        <td>

          <% if t.transaction_type == 'BUY' %>
            <%= number_to_currency(t.zarSpendAmount, unit: "R ")%>
          <% else %>
            <%= number_to_currency(t.zarRecieveAmount, unit: "R ")%>
          <% end %>

        </td>
        <td><%= t.status %></td>
        <td><%= t.created_at.strftime("%Y-%m-%d / %X") %></td>
      </tr>
    <% end %>
    <tr>
      <th><b>Balance:</b></th>
      <th><b><%= @account.eth_balance %> ETH</b></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tbody>
</table>
<div style="text-align: center">
  <%= will_paginate @eth_transactions, renderer: BootstrapPagination::Rails %>
</div>
