#transaction-form{"data-account-id" => "#{@account_id}", "data-client-id" => "@client_id", :style => "margin-top: 30px; padding-left: 20px; padding-right: 20px"}
	%label{:style => "margin-left: 15px"}
		Transaction Type:
	= select_tag :transaction_type, options_for_select(Transaction::TRANSACTION_TYPES), class: 'form-control', id: 'select-transaction-type'
	%br
	%label{:style => "margin-top: 30px; margin-left: 15px"}
		Amount (Rands):
	=number_field_tag :amount, 1000, min: '0', step: '10', id: 'input-amount', class: 'form-control'
	%br
	%button#btn-save.btn.btn-primary{:type => "button"} Proceed with transaction

	#parameters{ data: { account_id: @account.id, client_id: @client.id } }

	.notification{:style => "color: red; text-align: center"}