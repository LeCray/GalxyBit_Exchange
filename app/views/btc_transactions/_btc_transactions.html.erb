<table class="table">
  <thead>
    <tr>
      <th><b>CREATED AT</b></th>
      <th><b>TYPE</b></th>
      <th><b>BTC AMOUNT</b></th>
      <th><b>ZAR AMOUNT</B></th>
      <th><b>STATUS</b></th>
    </tr>
  </thead>
  <tbody>
    <% @btc_transactions.each do |t| %>
      <tr>
        <td><%= t.created_at.strftime("%Y-%m-%d || %X") %></td>
        <td><%= t.transaction_type %></td>
        <td>

          <% if t.transaction_type == 'BUY' %>
            <%= t.btcBuyAmount %>
          <% else %>
            <%= t.btcSellAmount %>
          <% end %>

        </td>
        <td>

          <% if t.transaction_type == 'BUY' %>
            <%= number_to_currency(t.zarSpendAmount, unit: "R ")%>
          <% else %>
            <%= number_to_currency(t.zarRecieveAmount, unit: "R ")%>
          <% end %>

        </td>
        <td><%= t.status %></td>
      </tr>
    <% end %>
    <tr>
      <th><b>Balance: <%= @account.btc_balance %></b></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </tbody>
</table>
<div style="text-align: center">
  <%= will_paginate @btc_transactions, renderer: BootstrapPagination::Rails %>
</div>
