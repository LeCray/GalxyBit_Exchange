<div class="container" style="margin-top: 150px; padding-bottom: 100px">
	<div class="row">

		<div class="col-xs-4" style="height: 700px; background-color: #d9d9d9">
			<%= render partial: 'blocks' %>
		</div>

		<div class="col-xs-8" style="height: 960px; background-color: #cccccc; padding-left: 30px">
			
			<!-- BTC form -->
			<div class="row">
				<div class="col-xs-6" style="margin: 20px; padding: 20px; background-color: white; height: 500px">
				
					<%= render partial: 'btc_form' %>
					<%= render partial: 'parameters' %>
				</div>
				<!-- End of BTC form -->
			
				<!-- Pending Order Shandice -->
				<div class="col-xs-4" style="margin-left: 20px; margin-top: 20px;  padding: 20px; height: 400px; background-color: white">

					<h6 style="text-align: center; "> PENDING ORDERS </h6>
					<hr style="margin-bottom: 25px">
				</div>
				<!-- End of Shandice -->
			</div>

				<div class="row">
					<div class="col-xs-11" style="margin-top: 10px; margin-left: 20px; margin-bottom: 50px; background-color: white">
						<div style="margin:20px">
							<%= render partial: 'btc_transactions' %>
						</div>
					</div>
				</div>


		</div>
	</div>
</div>




<script type="text/javascript">
	$(document).ready(function(){

		//Buying
		$("#cal1").keyup(function(){
			var b = $("#cal1").val();
			$("#result").val((+b / +<%= @btc_value %>).toFixed(8));
		});
		$("#result").keyup(function(){
			var b = $("#result").val();
			$("#cal1").val((+b * +<%= @btc_value %>).toFixed(2));
		});

		//Selling
		$("#cal2").keyup(function(){
			var s = $("#cal2").val();
			$("#result2").val((+s / +<%= @btc_value %>).toFixed(8));
		});
		$("#result2").keyup(function(){
			var s = $("#result2").val();
			$("#cal2").val((+s * +<%= @btc_value %>).toFixed(2));
		});

		$('#buy').click(function(){
			$('#buying_btc').show(); 
			$('#buy_header').show(); 
			$('#selling_btc').hide();
			$('#sell_header').hide(); 
			//Reset Selling Form
			$("#cal2").val("");
	       	$("#result2").val("");
		});

		$('#sell').click(function(){
			$('#buying_btc').hide();
			$('#buy_header').hide(); 
			$('#selling_btc').show();
			$('#sell_header').show(); 
			//Reset Buying Form
			$("#cal1").val("");
	       	$("#result").val(""); 
		});


	});
</script>


<%= javascript_include_tag 'btc_transactions/CryptoNew.js' %>
	<script>

		$(document).ready(function() {
			CryptoNew.init();
		});


	</script>

		




					
