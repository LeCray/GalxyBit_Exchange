<div class="container" style="margin-top: 150px; padding-bottom: 100px">
	<div class="row">

		<div class="col-xs-4" style="height: 700px; background-color: #d9d9d9">
			<%= render partial: 'blocks' %>
		</div>

		<div class="col-xs-8" style="height: 960px; background-color: #cccccc; padding-left: 30px">
			<div class="row">

				<!-- BTC form -->
				<div class="col-xs-11" style="margin: 20px; padding: 20px; background-color: white; height: 400px">
					<%= render partial: 'btc_form' %>
					<%= render partial: 'parameters' %>
				</div>
				<!-- End of BTC form -->
			</div>
			
			<div style="text-align: center">	
				<button id="t-btn" class="btn btn-outline" >Transactions</button>
				<button id="p-btn" class="btn btn-outline" style="">Pending Orders</button>
			</div>
				
				<!-- Transactions Shandice -->
				<div class="row" id="transactions">
					<div class="col-xs-11" style="margin-top: 10px; margin-left: 20px; margin-bottom: 50px; padding: 20px; background-color: white; height: 435px">
						<h6><strong> TRANSACTIONS </strong></h6>
						<hr style="margin-bottom: 25px">
						
						<% if @btc_transactions.count > 0 %>
							<%= render partial: 'btc_transactions' %>
						<% end %>
					</div>
				</div>
				<!-- End of Shandice -->


				<!-- Pending Order Shandice -->
				<div class="row" id="pending" style="display: none">
					<div class="col-xs-11" style="margin-left: 20px; margin-top: 10px;  padding: 20px; background-color: white; height: 435px">

						<h6><strong> PENDING ORDERS</strong> </h6>
						<hr style="margin-bottom: 25px">


						<% if @pending_btc_t.count > 0 %>
							<!--<div data-account-id="<%= @account_id %>" data-client-id="@client_id" style="padding: 20px">-->
			
								<%= render partial: 'pending_transactions' %>
								<label style="margin-top: 30px">
									Select Transaction to Cancel (ID):
								</label>

								<div style="width: 100px; ">
									<%= select_tag :which_transaction, options_for_select(@pending_btc_t.map { |b| b.id }), class: 'form', id: 'btc-transaction-id' %>
								</div>

								<button class="btn btn-outline-danger" id="btn-cancel" type="button" style="margin-top: 40px">Cancel Transaction</button>		
							</div>		
						<% end %>
					</div>
					<!-- End of Shandice -->
				</div>

			


		</div>
	</div>
</div>




<script type="text/javascript">
	$(document).ready(function(){

		//Buying
		$("#cal1").keyup(function(){
			var b = $("#cal1").val();
			$("#result").val((+b / +<%= @btc_value %>).toFixed(8));
		});
		$("#result").keyup(function(){
			var b = $("#result").val();
			$("#cal1").val((+b * +<%= @btc_value %>).toFixed(2));
		});

		//Selling
		$("#cal2").keyup(function(){
			var s = $("#cal2").val();
			$("#result2").val((+s / +<%= @btc_value %>).toFixed(8));
		});
		$("#result2").keyup(function(){
			var s = $("#result2").val();
			$("#cal2").val((+s * +<%= @btc_value %>).toFixed(2));
		});

		$('#buy').click(function(){
			$('#buying_btc').show(); 
			$('#buy_header').show(); 
			$('#selling_btc').hide();
			$('#sell_header').hide(); 
			//Reset Selling Form
			$("#cal2").val("");
	       	$("#result2").val("");
		});

		$('#sell').click(function(){
			$('#buying_btc').hide();
			$('#buy_header').hide(); 
			$('#selling_btc').show();
			$('#sell_header').show(); 
			//Reset Buying Form
			$("#cal1").val("");
	       	$("#result").val(""); 
		});

		$('#t-btn').click(function(){
			$('#transactions').show();
			$('#pending').hide(); 
		});	

		$('#p-btn').click(function(){
			$('#transactions').hide();
			$('#pending').show(); 
		});	



	});
</script>


<%= javascript_include_tag 'btc_transactions/CryptoNew.js' %>
	<script>

		$(document).ready(function() {
			CryptoNew.init();
		});


	</script>

		




					
