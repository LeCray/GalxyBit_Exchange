<div class="container" style="margin-top: 150px; padding-bottom: 100px">
	<div class="row">

		<div class="hidden-xs col-md-4 col-ls-4 " style="height: 500px; background-color: #d9d9d9">
			<%= render partial: 'blocks' %>
		</div>

		<div class="visible-xs">
			<%= link_to "BACK TO DASHBOARD", client_path(@current_client.id), class: 'btn btn-outline' %>
		</div>

		<div class="col-xs-12 col-md-8 col-ls-8" style="height: 500px; background-color: #cccccc; padding-left: 30px">
			<!-- ETH form -->
			<div class="row">
				<div class="col-xs-11" style="margin: 20px; padding: 20px; background-color: white; ">
					<%= render partial: 'eth_form' %>
					<%= render partial: 'parameters' %>
				</div>
			</div>
			<!-- End of eth form -->
			
			<div style="text-align: center">	
				<button id="t-btn" class="btn btn-outline" >Transactions</button>
				<button id="p-btn" class="btn btn-outline" style="">Pending Orders</button>
			</div>
				
		</div>
	</div>
	<!-- Transactions Shandice -->
	<div class="row" id="transactions">
		<div class="col-xs-12 col-ls-10 offset-ls-2" style="margin-top: 0px; margin-bottom: 50px; padding: 40px; background-color: #a6a6a6">
			<div style="background-color: white; padding: 20px; ">
				<h6><strong> TRANSACTIONS </strong></h6>
				<hr style="margin-bottom: 25px">
				
				<% if @eth_transactions.count > 0 %>
					<%= render partial: 'eth_transactions' %>
				<% end %>
			</div>
		</div>
	</div>
	<!-- End of Shandice -->


	<!-- Pending Order Shandice -->
		<div class="row" id="pending" style="display: none">
		<div class="col-xs-10 offset-xs-2" style="margin-top: 0px; margin-bottom: 50px; padding: 40px; background-color: #a6a6a6">
			<div style="background-color: white; padding: 20px; ">
				<h6><strong> PENDING ORDERS</strong> </h6>
				<hr style="margin-bottom: 25px">


				<% if @pending_eth_t.count > 0 %>
					<%= render partial: 'pending_transactions' %>		
				<% end %>
			</div>
		</div>
	</div>
	<!-- End of Shandice -->
</div>




<script type="text/javascript">
	$(document).ready(function(){

		//Buying
		$("#cal1").keyup(function(){
			var b = $("#cal1").val();
			$("#result").val((+b / +<%= @eth_value %>).toFixed(8));
		});
		$("#result").keyup(function(){
			var b = $("#result").val();
			$("#cal1").val((+b * +<%= @eth_value %>).toFixed(2));
		});

		//Selling
		$("#cal2").keyup(function(){
			var s = $("#cal2").val();
			$("#result2").val((+s / +<%= @eth_value %>).toFixed(8));
		});
		$("#result2").keyup(function(){
			var s = $("#result2").val();
			$("#cal2").val((+s * +<%= @eth_value %>).toFixed(2));
		});

		$('#buy').click(function(){
			$('#buying_eth').show(); 
			$('#buy_header').show(); 
			$('#selling_eth').hide();
			$('#sell_header').hide(); 
			//Reset Selling Form
			$("#cal2").val("");
	       	$("#result2").val("");
		});

		$('#sell').click(function(){
			$('#buying_eth').hide();
			$('#buy_header').hide(); 
			$('#selling_eth').show();
			$('#sell_header').show(); 
			//Reset Buying Form
			$("#cal1").val("");
	       	$("#result").val(""); 
		});

		$('#t-btn').click(function(){
			$('#transactions').show();
			$('#pending').hide(); 
		});	

		$('#p-btn').click(function(){
			$('#transactions').hide();
			$('#pending').show(); 
		});	



	});
</script>


