<table class="table table-bordered">
  <thead>
    <tr>
      <th><b>Date of Transaction</b></th>
      <th><b>Transaction Type</b></th>
      <th><b>Amount</b></th>
      <th><b>Status</b></th>
    </tr>
  </thead>
  <tbody>
    <% @account.zar_transactions.each do |t| %>
      <tr>
        <td>#{t.created_at}</td>
        <td>#{t.transaction_type}</td>
        <td>#{t.amount}</td>
        <td>#{t.status}</td>
      </tr>
    <% end %>
    <tr>
      <th></th>
      <th><b>Balance</b></th>
      <th><b>#{number_to_currency(@account.zar_balance, unit: "R ")}</b></th>
    </tr>
  </tbody>
</table>


