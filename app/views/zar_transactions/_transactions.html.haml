%table.table.table-bordered
	%thead
		%tr
			%th <b>Date of Transaction</b>
			%th <b>Transaction Type</b>
			%th <b>Amount</b>
			%th <b>Status</b>
	%tbody
		- @zar_transactions.each do |t|
			%tr
				%td #{t.created_at}
				%td #{t.transaction_type}
				%td #{t.amount}
				%td #{t.status}
		%tr
			%th
			%th <b>Balance</b>
			%th <b>#{number_to_currency(@account.zar_balance, unit: "R ")}</b>
