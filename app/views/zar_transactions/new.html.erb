
<div class="container" style="margin-top: 150px; padding-bottom: 100px">
	<div class="row">
		<div class="hidden-xs col-md-4 col-ls-4 " style="height: 700px; background-color: #d9d9d9">
			<%= render partial: 'blocks' %>	
		</div>	

		<div class="visible-xs">
			<%= link_to "BACK TO DASHBOARD", client_path(@current_client.id), class: 'btn btn-outline' %>
		</div>

		<div class="col-md-8 col-ls-8" style=" background-color: #cccccc; padding-left: 30px">
			<!-- TRANSACTION FORM -->
			<div class="row">
				<div class="col-xs-11 col-md-8 col-ls-8" style="margin: 20px; padding: 20px; background-color: white; height: 400px">

					<h6 style="text-align: center"> DEPOSIT/WITHDRAW </h6>
					<hr>
					
					<%= render partial: 'transaction_form' %>

				</div>
			</div>
			<!-- END -->

			<div style="text-align: center">	
				<button id="t-btn" class="btn btn-outline" >Transactions</button>
				<button id="p-btn" class="btn btn-outline" style="">Pending Orders</button>
			</div>

			<div class="row">
				<!-- TRANSACTIONS -->
				<div class="col-xs-11" id="transactions" style="margin-top: 10px; margin-left: 20px; margin-bottom: 50px; background-color: white;">
					<div style="margin:20px">
						<h6><strong> TRANSACTIONS </strong></h6>
						<hr style="margin-bottom: 25px">

						<%= render partial: 'transactions' %>

					</div>
				</div>
				<!-- END -->

				<!-- PENDING TRANSACTIONS -->
				<div class="col-xs-11"  id="pending" style=" margin-top: 10px; margin-left: 20px; margin-bottom: 50px; background-color: white; display: none; height: 435px">
					<div style="margin:20px">
						<h6><strong> PENDING ORDERS</strong> </h6>
						<hr style="margin-bottom: 25px">

						<% if @pending_zar_t.count > 0 %>
							<%= render partial: 'pending_transactions' %>
						<% end %>

					</div>
				</div>
				<!-- END -->
			</div>
		</div>
	</div>	


	
</div>

<script type="text/javascript">
	$(document).ready(function(){

		$('#t-btn').click(function(){
			$('#transactions').show();
			$('#pending').hide(); 
		});	

		$('#p-btn').click(function(){
			$('#transactions').hide();
			$('#pending').show(); 
		});	

	});
</script>

		
	<%= javascript_include_tag 'zar_transactions/New.js' %>
	<script>

		$(document).ready(function() {
			New.init();
		});


	</script>




					
