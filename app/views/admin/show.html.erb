<div class="container" style="margin-top: 100px;">

	<h3><%= @client %></h3>
	<hr >
	<div style="margin-bottom: 20px"> 
		<%= link_to "Back to Database", admin_index_path, class: "btn btn-outline" %>
	</div>

	<button id="zar-btn" class="btn btn-outline-info" >Zar Transactions</button>
	<button id="btc-btn" class="btn btn-outline-info" style="">BTC Transactions</button>

	<!-- ZARS -->
	<div id="zar-t">
		<div style="background-color: #d9d9d9;">
			<div class="row" style="background-color: #d9d9d9; padding-top: 20px; padding-bottom: 20px ">
				<!-- Update Zar Status Action -->
				<div class="col-xs-10 offset-xs-1" style="background-color: white">
					<%= render partial: 'update_zar_status' %>
				</div>
			</div>
		</div>
		<div class="row" style="background-color: #cccccc; padding-top: 20px; padding-bottom: 30px; margin-bottom: 500px">
			<!-- Transactions -->
			<div class="col-xs-10 offset-xs-1" style="background-color: white; padding: 20px; height:450px; ">
				<%= render partial: 'zar_transactions' %>
			</div>
		</div>
	</div>
	<!-- END -->

	<!-- BITCOINS -->
	<div id="btc-t" style="display: none">
		<div style="background-color: #d9d9d9;">
			<div class="row" style="background-color: #d9d9d9; padding-top: 20px; padding-bottom: 20px ">
				<!-- Update BTC Status Action -->
				<div id="update-status" class="col-xs-10 offset-xs-1" style="background-color: white">
					<%= render partial: 'update_btc_status' %>
				</div>
			</div>
		</div>
		<div class="row" style="background-color: #cccccc; padding-top: 20px; padding-bottom: 30px; margin-bottom: 500px">
			<!-- Transactions -->
			<div class="col-xs-10 offset-xs-1" style="background-color: white; padding: 20px; height:450px; ">
				<%= render partial: 'btc_transactions' %>
			</div>
		</div>
	</div>
	<!-- END -->
	
<%= render partial: 'parameters' %>

</div>





<%= javascript_include_tag 'admin/Show.js' %>
<script>

	$(document).ready(function() {
		Show.init();

		$('#zar-btn').click(function(){
			$('#zar-t').show();
			$('#btc-t').hide(); 
		});	

		$('#btc-btn').click(function(){
			$('#zar-t').hide();
			$('#btc-t').show();
		});	
	});


</script>
